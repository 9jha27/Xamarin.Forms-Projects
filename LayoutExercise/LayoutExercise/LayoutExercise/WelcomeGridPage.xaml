<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LayoutExercise.WelcomeGridPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="20"
    BackgroundColor="#127ac7">
    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Welcome to Xamarin"
                TextColor="#fff" />
            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="Cross-platform apps made easy"
                TextColor="#fff" />
        </StackLayout>
        <Button
            Grid.Row="1"
            BackgroundColor="#1dabf0"
            Text="Login"
            TextColor="#fff" />
        <Button
            Grid.Row="2"
            BackgroundColor="#1dabf0"
            Text="Register"
            TextColor="#fff" />
    </Grid>
</ContentPage>